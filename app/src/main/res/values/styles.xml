<resources>

    <!-- Base application theme. -->
    <style name="FoodTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/normal</item>
    </style>

    <style name="FoodThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/normal</item>

    </style>

    <style name="FoodTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/normal</item>
    </style>

    <!--Autocomplete textview underline color changing-->
    <style name="Autocomplete">
        <item name="colorControlNormal">@color/brand_black_dim</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/normal</item>
    </style>

    <style name="FoodTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="FoodTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/normal</item>

    </style>

    <!-- Navigation theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
        <item name="colorControlHighlight">@color/white</item> 
        <item name="colorAccent">@color/lineColor</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="actionMenuTextColor">@color/lineColor</item>
        <item name="android:actionMenuTextColor">@color/lineColor</item>
        <item name="android:fontFamily">@font/normal</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_bg</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/selected_tab_textcolor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:divider">@color/primary_dark_material_light</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:fontFamily">@font/normal</item>

    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">


    </style>

    <!-- Rating Bar style-->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/normal</item>

    </style>


    <style name="RatingBarfeed" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/brand_black</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/normal</item>

    </style>

</resources>
