<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:minHeight="50dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/FoodTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backIconImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/svg_go_back" />

            <TextView
                android:id="@+id/actionBarTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/backIconImageView"
                android:fontFamily="@font/normal"
                android:text="@string/categories"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/endLayout"
                android:hint="@string/searchMenu"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/normal"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/endLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:padding="10dp"
                    android:src="@drawable/searchlenss_icon" />

                <TextView
                    android:id="@+id/bookTableTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:drawableLeft="@drawable/book_a_table_icon"
                    android:padding="13dp"
                    android:text=""
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        tools:ignore="RtlSymmetry">

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Scrollable view here -->

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:contentScrim="@color/white"
                        app:expandedTitleGravity="top"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                        <RelativeLayout
                            android:id="@+id/topLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/restaurantLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:background="#F7F7F7">

                                <ImageView
                                    android:id="@+id/restaurantImageView"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:background="@drawable/no_image"
                                    android:padding="1dp"
                                    android:scaleType="fitXY" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/restaurantNameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/restaurantLayout"
                                android:fontFamily="@font/normal"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="13.5sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/restaurantItemsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/restaurantNameTextView"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="40dp"
                                android:layout_toRightOf="@+id/restaurantLayout"
                                android:fontFamily="@font/normal"
                                android:singleLine="true"
                                android:text=""
                                android:textSize="12sp"
                                android:textStyle="italic" />

                            <RatingBar
                                android:id="@+id/mainRatingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/restaurantItemsTextView"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/restaurantLayout"
                                android:isIndicator="true"
                                android:max="5"
                                android:numStars="5"
                                android:stepSize="1" />

                            <LinearLayout
                                android:id="@+id/favoriteLatout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/restaurantItemsTextView"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/mainRatingBar"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/likeImageview"
                                    android:layout_width="20dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_favorite_border"
                                    android:tint="@color/red" />

                                <TextView
                                    android:id="@+id/likeCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="5dp"
                                    android:text="0" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/lineTextView"
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_below="@+id/restaurantLayout"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/dividerlite" />


                            <LinearLayout
                                android:id="@+id/priceLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lineTextView"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/miniorderTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_toRightOf="@+id/mintext"
                                        android:fontFamily="@font/medium"
                                        android:gravity="center"
                                        android:text="0.00"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/mintext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="2dp"
                                        android:fontFamily="@font/normal"
                                        android:gravity="center"
                                        android:text="@string/minimumOrder"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/distanceTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_toRightOf="@+id/distanceText"
                                        android:fontFamily="@font/medium"
                                        android:gravity="center"
                                        android:text="0.0ml"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/distanceText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="2dp"
                                        android:layout_toRightOf="@+id/miniorderTextView"
                                        android:fontFamily="@font/normal"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:text="@string/time"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/deliveryFeesTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/medium"
                                        android:gravity="center"
                                        android:text="@string/free"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="2dp"
                                        android:layout_toLeftOf="@+id/deliveryFeesTextView"
                                        android:fontFamily="@font/normal"
                                        android:gravity="center"
                                        android:text="@string/deliveryFee"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/listLine"
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_below="@+id/priceLayout"
                                android:background="@color/dividerlite" />


                        </RelativeLayout>

                    </com.google.android.material.appbar.CollapsingToolbarLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <RadioGroup
                            android:id="@+id/restaurantMenuGroup"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:checkedButton="@+id/menuButton"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/menuButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/menu"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/dealButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/deal"
                                android:textAllCaps="true"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/offerButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/offer"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:visibility="visible" />

                            <RadioButton
                                android:id="@+id/infoButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/info"
                                android:textAllCaps="true"
                                android:textSize="12sp" />


                            <RadioButton
                                android:id="@+id/rewardButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/rewards"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/reviewButton"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/restaurant_tab_buttons"
                                android:button="@null"
                                android:fontFamily="@font/normal"
                                android:gravity="center"
                                android:text="@string/review"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:visibility="visible" />
                        </RadioGroup>


                        <ExpandableListView
                            android:id="@+id/dealsMenuListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:divider="@null"
                            android:groupIndicator="@null"
                            android:nestedScrollingEnabled="true"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/productLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/indicator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:tabIndicatorColor="@color/colorPrimary"
                                app:tabIndicatorHeight="2dp"
                                app:tabMode="scrollable"
                                app:tabSelectedTextColor="@color/black"
                                app:tabTextAppearance="@style/TextAppearance.AppCompat.Small" />

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/pager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@color/white"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/infoLinerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#f5f2f2"
                                android:padding="13dp"
                                android:text="@string/openCloseTime"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ListView
                                android:id="@+id/openCloseListView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:dividerHeight="0.5dp"
                                android:nestedScrollingEnabled="true"
                                android:padding="2dp">

                            </ListView>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/offerLinerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="#f5f2f2"
                                android:gravity="center|start"
                                android:padding="13dp"
                                android:text="@string/yourOffers"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/firstUserOfferLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/offerImageView"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:src="@drawable/offer_icon_red" />

                                <TextView
                                    android:id="@+id/offerTexView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="23dp"
                                    android:padding="13dp"
                                    android:text="@string/firstOffer"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/normalOfferLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/offerImageView2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/offer_icon_red" />

                                <TextView
                                    android:id="@+id/offerTexView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="13dp"
                                    android:text="@string/normalOffer"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/deliveryLayoutOfferLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/offerImageView3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/offer_icon_red" />

                                <TextView
                                    android:id="@+id/offerTexView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="13dp"
                                    android:text="@string/freeDelivery"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reviewLinerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#f5f2f2"
                                android:padding="13dp"
                                android:text="@string/customerReview"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ListView
                                android:id="@+id/reviewListView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:dividerHeight="0.5dp"
                                android:nestedScrollingEnabled="true"
                                android:padding="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rewardLinerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/restaurantMenuGroup"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#f5f2f2"
                                android:padding="13dp"
                                android:text="@string/yourReward"
                                android:textColor="#000000"
                                android:textSize="12sp" />


                            <RelativeLayout
                                android:id="@+id/rewardLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mainRatingBar"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/restaurantLayout">

                                <ImageView
                                    android:id="@+id/rewardImageView"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/rewards"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/rewardTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@+id/rewardImageView"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/rewardPoints"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />

                            </RelativeLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </androidx.core.widget.NestedScrollView>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomCartLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:visibility="gone">

            <TextView
                android:id="@+id/itemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/medium"
                android:text="1 item"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lineTextView3"
                android:layout_width="1.5dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/itemTextView"
                android:background="@color/white"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lineTextView3"
                android:fontFamily="@font/medium"
                android:text="0.00"
                android:textColor="@color/white"
