<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/menuContentLayout"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:layout_toLeftOf="@+id/plusButton">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menuType"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/veg"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/menuNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/menuType"
            android:text="sjkdfbdjksfujh"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/menuPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/normal"
        android:text="0.00"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/menuDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:lineSpacingExtra="0.5mm"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="sdkjlgd njklgndkl njklgndkl njklgndkl njklgndkl njklgndklsgnkdlsvnlkdkdnkldnvlk"
        android:textColor="#a4000000"
        android:textSize="10.5sp"
        android:textStyle="normal"
        android:visibility="visible" />

</LinearLayout>

<ImageView
    android:id="@+id/plusButton"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/menuQtyEditText"
    android:gravity="center"
    android:padding="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:src="@drawable/plus_icon_dark" />

    <ImageView
        android:id="@+id/favMenuDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/menuQtyEditText"
        android:layout_below="@+id/plusButton"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/delete_icon" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/dim_dim_black"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>