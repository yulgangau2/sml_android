<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<RelativeLayout
    android:id="@+id/noReviewLyout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/noReviewIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/no_review_image"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/noReviewTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noReviewIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/noReviews"
        android:textSize="25dp"
        android:textColor="#C8C8C8"
        />

</RelativeLayout>
    <ListView
        android:id="@+id/restaurantsMenuListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/restaurantMenuGroup"
        android:background="@color/dividerlite"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.5dp"
        android:visibility="visible"
        />


</RelativeLayout>