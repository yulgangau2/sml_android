<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/todayTextview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:textSize="12.5sp"
        android:text="Wednessday"
        android:textColor="@color/button_color" />

    <TextView
        android:id="@+id/closeTextview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="3dp"
        android:text="Closed"
        android:textSize="12.5sp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/firstOpenTextview"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:gravity="left"
                android:textSize="11sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hifenTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/firstCloseTextview"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=" PM12"
                android:gravity="left"
                android:textSize="11sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/secondOpenTextview"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:gravity="left"
                android:textSize="11sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/underHivenTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/secondCloseTextview"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=" PM12"
                android:gravity="left"
                android:textSize="11sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>