<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biriyani(100)"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subAddonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="addon1 + addon2 + addon3"
            android:textSize="9sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menuInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------"
            android:textSize="9sp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/plusMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/image">

        <ImageView
            android:id="@+id/minusButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/minues_button"
            android:gravity="center"
            android:padding="6dp"/>


        <TextView
            android:id="@+id/menuQtyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/minusButton"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/plusButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:layout_toRightOf="@+id/menuQtyEditText"
            android:src="@drawable/cart_plus_button"
            android:gravity="center"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/menuPriceTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="000.00"
        android:textStyle="bold"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/menuDeleteButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete_icon"
        android:visibility="visible" />


</LinearLayout>