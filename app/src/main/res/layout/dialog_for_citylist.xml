<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/searchRestaurantEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/radionGroup"
        android:drawableLeft="@drawable/search_icon_black"
        android:drawablePadding="10dp"
        android:background="@drawable/spinner_background"
        android:hint="Search by Restaurant"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/restaurantListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/areaEditText"/>

</LinearLayout>
