<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eatyhero.customer.moretab.RewardPonitScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/payment_toolbar"/>

    <TextView
        android:id="@+id/totalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_bg_cancel"
        android:padding="10dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/rewardHistoryListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_below="@+id/addToolbar"
        />

</LinearLayout>
